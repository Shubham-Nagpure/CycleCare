<%= form_with model: @care_note, local: true do |form| %>
  <div class="w-full max-w-md p-6 bg-white rounded-lg shadow-lg">
    
    <!-- Form Header -->
    <div class="text-center">
      <h2 class="text-2xl font-semibold text-gray-900">Add Care</h2>
      <p class="text-gray-600 text-sm">Track your care details easily</p>
    </div>

    <!-- Care Form -->
    <div class="mt-6 space-y-4">
      <!-- Title Field -->
      <div>
        <%= form.label :title, class: "block text-gray-700 font-medium" %>
        <%= form.text_field :title, placeholder: "Title", class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-pink-500" %>
      </div>

      <!-- Tag Field -->
      <div>
        <%= form.label :tag, class: "block text-gray-700 font-medium" %>
        <%= form.text_field :tag, placeholder: "e.g., Nutrition, Exercise, Mood", class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-pink-500" %>
      </div>

      <!-- Body Field -->
      <div>
        <%= form.label :body, class: "block text-gray-700 font-medium" %>
        <%= form.text_area :body, placeholder: "Enter details...", class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-pink-500 h-24" %>
      </div>

      <!-- Add Button -->
      <div>
        <%= form.submit "Add Care Note", class: "w-full px-4 py-2 text-white bg-pink-600 rounded-lg hover:bg-pink-700 transition" %>
      </div>
    </div>
  </div>
<% end %>
